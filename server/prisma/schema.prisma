generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}


enum Role {
  USER
  ADMIN
}

enum Difficulty {
  BEGINNER
  INTERMEDIATE
  ADVANCED
  PAKARLELE
}

model User {
  id       Int    @id @default(autoincrement())
  full_name String
  email String @unique
  username String
  password String
  role Role @default(USER)
  exp Int @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Material {
  id Int @id @default(autoincrement())
  title String

  content String
  difficulty Difficulty
  expReward Int
  expectedTime Int

  quiz Quiz?

}

model Quiz {
  id        Int        @id @default(autoincrement())
  title     String
  summary   String?

  materialId Int   @unique
  material   Material @relation(fields: [materialId], references: [id])

  questions Question[]
}

model Question {
  id        Int       @id @default(autoincrement())
  text      String
  quizId    Int
  quiz      Quiz      @relation(fields: [quizId], references: [id])
  choices   Choice[]
}

model Choice {
  id          Int      @id @default(autoincrement())
  text        String
  isCorrect   Boolean  @default(false)
  questionId  Int
  question    Question @relation(fields: [questionId], references: [id])
}